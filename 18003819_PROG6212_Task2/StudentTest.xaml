        <Button x:Name="submitButton" Content="Submit" Background="White" Foreground="RoyalBlue" HorizontalAlignment="Left" Height="30" Margin="16.09,274,0,-226" VerticalAlignment="Top" Width="66" Click="SubmitButton_Click" Grid.Column="1"/>
        <Button x:Name="finishButton" Content="Finish" Background="White" Foreground="RoyalBlue" HorizontalAlignment="Left" Height="30" Margin="92.09,274,0,-226" VerticalAlignment="Top" Width="68" Click="FinishButton_Click" Grid.Column="1"/>
        <TextBlock Name="resultTextBox" Foreground="White" Background="Transparent" HorizontalAlignment="Left" Visibility="Hidden"  Height="284" Margin="52,83,-52,-289" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="502" Grid.ColumnSpan="2"/>
        <Button Content="Back" Name="backMenuButton" Background="White" Foreground="RoyalBlue" HorizontalAlignment="Left" Margin="297,20,0,0" VerticalAlignment="Top" Width="76" Click="BackMenuButton_Click" Height="29" RenderTransformOrigin="5.271,-6.53" Grid.Column="1" />

