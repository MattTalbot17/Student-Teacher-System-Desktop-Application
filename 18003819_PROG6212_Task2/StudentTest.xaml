        <Label Name="questionNumberLabel" Content=":" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0.09,78,0,0" Width="34" Grid.Column="1"/>
        <Label Name="questionTBALabel" Content="question to be answered:" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="22,109,0,-31" Grid.ColumnSpan="2"/>
        <RadioButton Name="optionAButton" Content="optionA" Foreground="White" HorizontalAlignment="Left" Height="21" Margin="22,156,0,-99" VerticalAlignment="Top" Width="108" Grid.ColumnSpan="2"/>
        <RadioButton Name="optionBButton" Content="optionB" Foreground="White" HorizontalAlignment="Left" Height="21" Margin="22,182,0,-125" VerticalAlignment="Top" Width="108" Grid.ColumnSpan="2"/>
        <RadioButton Name="optionCButton" Content="optionC" Foreground="White" HorizontalAlignment="Left" Height="21" Margin="22,208,0,-151" VerticalAlignment="Top" Width="108" Grid.ColumnSpan="2"/>
        <RadioButton Name="optionDButton" Content="optionD" Foreground="White" HorizontalAlignment="Left" Height="21" Margin="22,234,0,-177" VerticalAlignment="Top" Width="108" Grid.ColumnSpan="2"/>
