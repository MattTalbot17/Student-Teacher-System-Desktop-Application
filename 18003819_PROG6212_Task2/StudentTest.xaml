        <Label Content="Select Test To Take:" Foreground="White" HorizontalAlignment="Left" Margin="22,20,0,0" VerticalAlignment="Top" Width="170" Grid.ColumnSpan="2"/>
        <ComboBox Name="testNameComboBox" Background="White" Foreground="RoyalBlue" HorizontalAlignment="Left" Height="26" Margin="88.09,20,0,0" VerticalAlignment="Top" Width="172" SelectionChanged="TestNameComboBox_SelectionChanged" Grid.Column="1"/>
