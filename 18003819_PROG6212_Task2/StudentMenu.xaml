        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>
        <Button Name="takeTestButton" Content="Take a Test" Background="White" Foreground="RoyalBlue" HorizontalAlignment="Left" Margin="80,34,0,0" VerticalAlignment="Top" Width="116" Click="TakeTestButton_Click"/>
